<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cheat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rohit.prime_game.Cheat">

    <Button
        android:text="@string/cheatButton"
        android:layout_width="123dp"
        android:layout_height="72dp"
        android:id="@+id/letsCheat"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_cheat"
        app:layout_constraintBottom_toBottomOf="@+id/activity_cheat"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_cheat"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_cheat"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.47" />

    <TextView
        android:text="@string/wantCheat"
        android:layout_width="160dp"
        android:layout_height="83dp"
        android:id="@+id/cheatView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_cheat"

        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_cheat"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_cheat"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_cheat"
        app:layout_constraintVertical_bias="0.15" />
</android.support.constraint.ConstraintLayout>
